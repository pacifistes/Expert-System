NAME = expert-system
FLAGS = -std=c++11 -Wall -Wextra

INCLUDE = -I includes/ \
	-I /Users/vbauguen/.brew/Cellar/sdl2/2.0.8/include/ \
	-I /Users/vbauguen/.brew/Cellar/glew/2.1.0/include

SRCSPATH = srcs/

SRCS = 	main.cpp \
		Color.cpp \
		SDLDisplay.cpp \
		Rule.cpp

LIBS =  -L /Users/vbauguen/.brew/Cellar/sdl2/2.0.8/lib/ -lSDL2 \
		-L /Users/vbauguen/.brew/Cellar/glew/2.1.0/lib -lGLEW \
		-framework OpenGL -lm 

OBJ= $(SRC:.cpp=.o)

CC = clang++

SRC = $(addprefix $(SRCSPATH), $(SRCS))

%.o: %.cpp
	$(CC) $(INCLUDE) -c $(FLAGS)  $< -o $@ 

all: $(NAME)

$(NAME): $(OBJ)
	$(CC)  $(FLAGS) $(INCLUDE) -o $(NAME) $(LIBS) $(OBJ) 

clean:
	rm -f $(OBJ)

fclean:
	rm -f $(NAME) $(OBJ)

re: fclean all

.PHONY: all clean fclean re